[global]
index-url = <%= @index_url %>
extra-index-url = <%= @extra_index_url %>
<% if @trusted_hosts.length > 0 -%>
trusted-host =
<% @trusted_hosts.each do |trusted_host| -%>
  <%= trusted_host %>
<% end -%>
<% end -%>

<% @optional_settings.keys.sort.each do |setting| -%>
<%= setting -%> = <%= @optional_settings[setting] %>
<% end -%>
